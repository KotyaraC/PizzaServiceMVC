@model Test.ViewModels.AdminViewModel

@{
    ViewData["Title"] = "Add New Pizza";
}

<h1>Add New Pizza</h1>

<form asp-action="AddPizza" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="NewPizza.Name" class="control-label"></label>
        <input asp-for="NewPizza.Name" class="form-control" />
        <span asp-validation-for="NewPizza.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPizza.Description" class="control-label"></label>
        <input asp-for="NewPizza.Description" class="form-control" />
        <span asp-validation-for="NewPizza.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPizza.Weight" class="control-label"></label>
        <input asp-for="NewPizza.Weight" class="form-control" />
        <span asp-validation-for="NewPizza.Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPizza.Price" class="control-label"></label>
        <input asp-for="NewPizza.Price" class="form-control" />
        <span asp-validation-for="NewPizza.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Select Image</label>
        <input type="file" name="imageFile" class="form-control" />
        <span asp-validation-for="NewPizza.ImagePath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Pizza" class="btn btn-primary" />
    </div>
</form>
