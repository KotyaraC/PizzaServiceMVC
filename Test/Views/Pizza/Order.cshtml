@model Test.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Pizza";
}

<h1>Order Pizza</h1>

@if (Model.Pizza != null)
{
    <div>
        <h2>@Model.Pizza.Name</h2>
        <p>Description: @Model.Pizza.Description</p>
        <p>Weight: @Model.Pizza.Weight</p>
        <p>Price: @Model.Pizza.Price</p>
        <img src="@Model.Pizza.ImagePath" alt="@Model.Pizza.Name" width="200" />
    </div>

    <h2>Order Form</h2>
    <form asp-action="SubmitOrder" method="post">
        <input type="hidden" name="Order.PizzaId" value="@Model.Pizza.Id" />
        <div class="form-group">
            <label for="userName">Name:</label>
            <input type="text" name="userName" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="userPhone">Phone:</label>
            <input type="text" name="userPhone" class="form-control" required />
            </div>
        <input type="submit" value="Submit Order" class="btn btn-primary" />
    </form>

}
else
{
    <p>Pizza not found.</p>
}
