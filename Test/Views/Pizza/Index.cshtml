@model Test.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Pizza Order";
}

<h1>Pizza Order</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Weight</th>
            <th>Price</th>
            <th>Image</th>
            <th>Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pizza in Model.Pizzas)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Description</td>
                <td>@pizza.Weight</td>
                <td>@pizza.Price</td>
                <td><img src="@pizza.ImagePath" alt="@pizza.Name" width="100" /></td>
                <td>
                    <form asp-action="Order" method="post">
                        <input type="hidden" name="pizzaId" value="@pizza.Id" />
                        <div class="form-group">
                            <label for="userName">Name:</label>
                            <input type="text" name="userName" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="userPhone">Phone:</label>
                            <input type="text" name="userPhone" class="form-control" required />
                        </div>
                        <input type="submit" value="Order" class="btn btn-primary" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
